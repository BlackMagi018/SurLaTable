<GridPane alignment="center" hgap="10.0" vgap="10.0" fx:controller="SurLaTable.FeedMeNowController"
          xmlns:fx="http://javafx.com/fxml">
    <padding>
        <Insets bottom="10.0" left="10.0" right ="10.0" top="10.0"/>
    </padding>
        
    <Label text="Sur La Table" GridPane.columnIndex="0" GridPane.rowIndex="0" 
            style="-fx-font: NORMAL 20 Tahoma;"/>
 
    <TableView fx:id="tableView" GridPane.columnIndex="0" 
                GridPane.rowIndex="1">
        <columns>
            <TableColumn fx:id="RestCol" text="Restaurant" prefWidth="100">
                <cellValueFactory>
                    <PropertyValueFactory property="name" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="Cuisine" prefWidth="100">
                <cellValueFactory>
                    <PropertyValueFactory property="cuisine" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="Hours" prefWidth="200">
                <cellValueFactory>
                    <PropertyValueFactory property="time" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="Price Range" prefWidth="200">
                <cellValueFactory>
                    <PropertyValueFactory property="price" />
                </cellValueFactory>
            </TableColumn>
        </columns>    
        <items>
            <FXCollections fx:factory="observableArrayList">
                <Food name="Taco Bell" cuisine="Mexican" time="7AM-5AM" price="$" />      
            </FXCollections>
        </items>
    
    </TableView>

</GridPane>
